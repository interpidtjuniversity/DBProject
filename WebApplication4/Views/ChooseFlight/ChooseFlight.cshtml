    </script>
</head>
<body>
    <table id="Flight_Chart">
        <tr>
            <th>航班ID</th>
            <th>飞机ID</th>
            <th>最大容量</th>
            <th>预订数目</th>
            <th>过安检人数</th>
            <th>登机人数</th>
            <th>价格</th>
            <th>最大行李重量</th>
        </tr>
        @{

            foreach (Flight flight in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(flight.Flight_ID, "GetFlightInfo", new { id = flight.Flight_ID,capacity = flight.Max_Capacity })
                    </td>
                    <td>@Html.DisplayFor(m => flight.Plane_ID)</td>
                    <td>@Html.DisplayFor(m => flight.Max_Capacity)</td>
                    <td>@Html.DisplayFor(m => flight.Reserve_Num)</td>
                    <td>@Html.DisplayFor(m => flight.Pass_Security_Inspection_Num)</td>
                    <td>@Html.DisplayFor(m => flight.Boarding_Num)</td>
                    <td>@Html.DisplayFor(m => flight.Price)</td>
                    <td>@Html.DisplayFor(m => flight.Max_Baggage_Weight)</td>
                </tr>
            }
        }
    </table>
</body>
